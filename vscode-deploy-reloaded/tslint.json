{
    "rules": {
        "arrow-return-shorthand": true,
        "await-promise": [true, "Thenable", "PromiseLike"],
        "class-name": true,
        "curly": true,
        "indent": [
            true,
            "spaces"
        ],
        "jsdoc-format": true,
        "no-unused-variable": true,
        "no-var-keyword": true,
        "semicolon": [
            true,
            "always"
        ]
    },
    "defaultSeverity": "warning"
}